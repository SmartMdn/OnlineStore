@model OnlineStore.WebUI.Models.ViewModels.LoginModel



<form class="form-group" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="All"></div>
    <div>
        <div class="form-group row">
            <label class="form-text align-self-center" asp-for="Email">Введите Email</label><br />
            <input class="form-control" type="text" asp-for="Email" />
        </div>
        <div class="form-group row">
            <label class="form-text align-self-center"  asp-for="Password">Введите пароль</label><br />
            <input class="form-control align-self-center " asp-for="Password" />
            <a class="nav-link" asp-action="Register" class="nav-link">Регистрация </a>
        </div>
        
        <div>
            <input type="submit" value="Логин" />
        </div>
    </div>
</form>