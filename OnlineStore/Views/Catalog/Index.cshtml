@using Microsoft.EntityFrameworkCore
@using OnlineStore.WebUI.Models.ViewModels
@model ProductsViewModel

@{
    }


    <div class="container-fluid">
        <div class="row">
            <header class="mt-2 col-md-3" >
                <nav class=" navbar-expand-md navbar-light bg-light">
                    <a class="logo navbar-brand">Категории</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto flex-column">
                            @foreach (var item in Model!.Categories)
                            {
                                <li class="nav-item active">
                                    <a class ="nav-link"  asp-action="Index" asp-route-id="@item.Id" class="nav-link" >@Html.DisplayFor(model => item.Name) </a>
                                </li>
                            }
                        </ul>
                    </div>
                </nav>
            </header>
            <!-- end header -->

            <main class="col-md-9">
                <div class="row gy-2">
                    @foreach (var item in Model.Products)
                    {
                        <div class="col-sm-4  ">
                            <div class="card  py-5 my-5" style="min-height: 300px">
                                @if (item.File != null)
                                {
                                    <img src="@Url.Content(item.File)" class="card-img-top" alt="...">
                                }
                                else
                                {
                                    <img src="..." class="card-img-top" alt="...">
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@Html.DisplayFor(model => item.Title)</h5>
                                    <p class="card-text">@Html.DisplayFor(model => item.Description)</p>
                                    <p class="text-muted card-text ">Цена: @Html.DisplayFor(model => item.Price) б.р.</p>
                                    <a asp-controller="Catalog" asp-action="AddInBasket" asp-route-productId="@item.Id" class=" position-absolute btn btn-secondary">Купить</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </main>
            <!-- end main -->
        </div>



    </div>

