@using OnlineStore.WebUI.Models.ViewModels
@model ProductsViewModel

<div class="text-center">
    <h1 class="display-4">Покупательская корзина</h1>
</div>

<main class="col-md-9">
    <div class="row gy-2">
        @foreach (var item in Model.Products)
        {
            <div class="col-sm-3  ">
                <div class="card m-3 " style="min-height: 300px">
                    <img src="..." class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(model => item.Title)</h5>
                        <p class="card-text">@Html.DisplayFor(model => item.Description)</p>
                        <p class="text-muted card-text ">Цена: @Html.DisplayFor(model => item.Price) б.р.</p>
                    </div>
                </div>
            </div>
        }
    </div>
</main>
<div>
    <a class="btn-dark" asp-controller="Cart" asp-action="SubbmitOrder">Купить</a>
</div>

