@using OnlineStore.WebUI.Models.ViewModels
@model CartViewModel

<div class="text-center">
    <h1 class="display-4">Покупательская корзина</h1>
</div>

<main class="col">
    <div class="row gy-2">
        @foreach (var item in Model.Products)
        {
            <div class="col-sm-3  ">
                <div class="card  py-5 my-5 " style="min-height: 300px">
                    @if (item.File != null)
                    {
                        <img src="@Url.Content(item.File)" class="card-img-top" alt="...">
                    }
                    else
                    {
                        <img src="..." class="card-img-top" alt="...">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(model => item.Title)</h5>
                        <p class="card-text">@Html.DisplayFor(model => item.Description)</p>
                        <p class="text-muted card-text ">Цена: @Html.DisplayFor(model => item.Price) б.р.</p>
                    </div>
                </div>
            </div>
        }
        
    </div>
</main>
<div>
    <p class="text-muted" >Общая цена:@Model.AllPrice</p>
    <a class="btn btn-secondary" asp-controller="Cart" asp-action="SubmitOrder">Купить</a>
</div>

